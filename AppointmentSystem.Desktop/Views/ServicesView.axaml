<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AppointmentSystem.Desktop.Views.ServicesView">

    <DockPanel Margin="20">

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Spacing="10" DockPanel.Dock="Top">
            <Button Content="Refresh" Name="RefreshBtn"/>
            <Button Content="Add" Name="AddBtn"/>
            <Button Content="Edit" Name="EditBtn"/>
            <Button Content="Delete" Name="DeleteBtn"/>
        </StackPanel>

        <!-- Services ListBox -->
        <ScrollViewer Margin="0,10,0,0">
            <ListBox Name="ServicesGrid" ItemsSource="{Binding Services}" Background="Transparent" BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8 6" Background="Transparent">
                            <Grid ColumnDefinitions="2*,1*,1*" ColumnSpacing="12">
                                <TextBlock Grid.Column="0" Text="{Binding Name}" TextTrimming="CharacterEllipsis" />
                                <TextBlock Grid.Column="1" Text="{Binding DurationMinutes}" TextTrimming="CharacterEllipsis" />
                                <TextBlock Grid.Column="2" Text="{Binding Price, StringFormat='{}{0:0.00}'}" TextTrimming="CharacterEllipsis" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
    </DockPanel>

</UserControl>

