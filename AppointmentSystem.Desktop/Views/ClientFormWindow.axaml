<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AppointmentSystem.Desktop.Views.ClientFormWindow"
        Width="400" Height="380"
        WindowStartupLocation="CenterOwner"
        Title="Client">

    <StackPanel Margin="20" Spacing="10">

        <TextBlock Text="Name"/>
        <TextBox Name="NameBox"/>

        <TextBlock Text="Phone"/>
        <TextBox Name="PhoneBox"/>

        <TextBlock Text="Email"/>
        <TextBox Name="EmailBox"/>

        <TextBlock Text="Notes"/>
        <TextBox Name="NotesBox" AcceptsReturn="True" Height="80"/>

        <TextBlock Name="ErrorText" Foreground="Red" Text=""/>

        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
            <Button Name="CancelBtn" Content="Cancel" Width="80"/>
            <Button Name="SaveBtn" Content="Save" Width="80"/>
        </StackPanel>

    </StackPanel>

</Window>
