<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="https://github.com/avaloniaui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="AppointmentSystem.Desktop.Views.ClientsView">

    <DockPanel Margin="20">

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Spacing="10" DockPanel.Dock="Top">
            <Button Content="Refresh" Name="RefreshBtn"/>
            <Button Content="Add" Name="AddBtn"/>
            <Button Content="Edit" Name="EditBtn"/>
            <Button Content="Delete" Name="DeleteBtn"/>
        </StackPanel>

        <!-- Clients ListBox -->
        <ScrollViewer Margin="0,10,0,0">
            <ListBox Name="ClientsGrid" ItemsSource="{Binding Clients}" Background="Transparent" BorderThickness="0">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8 6" Background="Transparent">
                            <Grid ColumnDefinitions="2*,1*,2*,3*" ColumnSpacing="12">
                                <TextBlock Grid.Column="0" Text="{Binding Name}" TextTrimming="CharacterEllipsis" />
                                <TextBlock Grid.Column="1" Text="{Binding Phone}" TextTrimming="CharacterEllipsis" />
                                <TextBlock Grid.Column="2" Text="{Binding Email}" TextTrimming="CharacterEllipsis" />
                                <TextBlock Grid.Column="3" Text="{Binding Notes}" TextTrimming="CharacterEllipsis" MaxLines="1" Opacity="0.9" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

    </DockPanel>
</UserControl>
